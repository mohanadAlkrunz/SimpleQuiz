<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionTheme">
        <item name="android:lines">2</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:fontFamily">@font/bigshouldersmed</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="RadioButtonTheme">
        <item name="android:fontFamily">@font/bigshouldersmed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <style name="checkButtonStyle">
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:background">@color/rose</item>
        <item name="android:fontFamily">@font/bigshoulders</item>

    </style>
    <style name="resultStyle">
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">42sp</item>
        <item name="android:lines">3</item>

    </style>
    <style name="TitleStyle">
        <item name="android:textSize">48sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/bigshouldersmed</item>
        <item name="android:textColor">#D3C3C3</item>
    </style>
</resources>
